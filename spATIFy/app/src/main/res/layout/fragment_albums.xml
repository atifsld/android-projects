<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.AlbumsFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="#8C8C8C"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#8C8C8C"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/album_art_iv_whitelightwhiteheat"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:contentDescription="whiteLightWhiteHeatDescription"
                    android:src="@drawable/whitelightwhiteheat" />

                <TextView
                    android:id="@+id/album_title_whitelightwhiteheat"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="White Light/White Heat"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/album_artist_whitelightwhiteheat"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="The Velvet Underground"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:background="#8C8C8C"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#8C8C8C"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/album_art_iv_kindofblue"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:contentDescription="kindOfBlueDescription"
                    android:src="@drawable/kindofblue" />

                <TextView
                    android:id="@+id/album_title_kindofblue"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="Kind Of Blue"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/album_artist_kindofblue"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="Miles Davis"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>

</FrameLayout>